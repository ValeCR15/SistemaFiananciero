@model IEnumerable<SistemaFinanciero.Models.ProyeccionVenta>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mb-4">
    <div class="col-lg-12 col-md-6 mb-md-0 mb-4">
        <div class="card">
            <div class="card-header pb-0">
                <div class="row">
                    <div class="col-lg-6 col-7">
                        <h6>Proyeccion de Ventas</h6>
                        @if (Session["Rol"].ToString() == "1")
                        {
                            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                        }
                    </div>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive">
                    <table class="table align-items-center mb-0">
                        <thead class="mb-0 text-sm">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.fecha)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.monto_proyectado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.producto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.fecha_creacion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.fecha_actualizacion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CuentaContable.codigo)
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody class="mb-0 text-sm">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fecha)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.monto_proyectado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.producto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fecha_creacion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.fecha_actualizacion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CuentaContable.codigo)
                                    </td>
                                    <td>
                                        @if (Session["Rol"].ToString() == "1")
                                        {<a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-sm btn-primary">Edit</a>}
                                        <a href="@Url.Action("Details", new { id = item.id })" class="btn btn-sm btn-info">Details</a>
                                        @if (Session["Rol"].ToString() == "1")
                                        {<a href="@Url.Action("Delete", new { id = item.id })" class="btn btn-sm btn-danger">Delete</a>}
                                        </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

