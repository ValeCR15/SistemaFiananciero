@model IEnumerable<SistemaFinanciero.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @if (Session["Rol"].ToString() == "1"){@Html.ActionLink("Create New", "Create")}
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.contrasena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_creacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_actualizacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rol.descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contrasena)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_creacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_actualizacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rol.descripcion)
        </td>
        <td>
            @if (Session["Rol"].ToString() == "1")
            {@Html.ActionLink("Edit", "Edit", new { id = item.id })} |
            @Html.ActionLink("Details", "Details", new { id = item.id }) |
            @if (Session["Rol"].ToString() == "1")
            {@Html.ActionLink("Delete", "Delete", new { id = item.id })}
        </td>
    </tr>
}

</table>
